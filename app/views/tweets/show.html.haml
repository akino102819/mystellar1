.main_top
  .category
    .tweet__content
      .content_image
        = image_tag @tweet.image
      .content_title
        = @tweet.title
      .content_content
        = simple_format(@tweet.content)
  .tweet__send
    - if user_signed_in? && current_user.id == @tweet.user_id
      = link_to '編集', "/tweets/#{@tweet.id}/edit", class:"edit"
      = link_to "削除", "/tweets/#{@tweet.id}", class:"delete"